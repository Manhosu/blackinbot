{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/media/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/telegram/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install --production=false",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production"
  },
  "crons": []
} 